{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"incremental": true,
		"inlineSources": true,
		"lib": ["es2017", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitThis": true,
		"outDir": "./out-tsc",
		"rootDir": "./src",
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "esnext"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**/*"]
}
